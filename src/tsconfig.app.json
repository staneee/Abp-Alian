{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "types": [
      "node"
    ],
    "paths": {
      "@abp/*": [ "../node_modules/abp-ng2-module/dist/src/*" ],  
      "@abp": [ "../node_modules/abp-ng2-module/dist/src" ],
      "@appshared": ["app/shared"],
      "@appshared/*": ["app/shared/*"],
      "@testing": ["testing"],
      "@testing/*": ["testing/*"],
      "@env": ["environments"],
      "@env/*": ["environments/*"],
      "@app/*": ["./app/*"],
      "@shared": ["shared"],
      "@shared/*": ["shared/*"],
    },
    "baseUrl": "./"
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}